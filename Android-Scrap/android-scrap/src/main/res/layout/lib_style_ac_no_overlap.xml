<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout 
        android:id="@+id/lib_style_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        >
    </FrameLayout>
    <FrameLayout 
        android:id="@+id/lib_style_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/lib_style_top"
        android:layout_above="@id/lib_style_bottom"
        >
    </FrameLayout>
    
    <FrameLayout 
        android:id="@+id/lib_style_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        >
        
    </FrameLayout>

</RelativeLayout>
